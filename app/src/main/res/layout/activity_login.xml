<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@android:color/holo_orange_light">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="16dp"
            android:id="@+id/passwordInputLogin"
            app:layout_constraintStart_toStartOf="@+id/emailInputLogin"
            app:layout_constraintEnd_toEndOf="@+id/emailInputLogin"
            android:layout_marginTop="8dp"
            android:hint="Hasło"
            android:background="@drawable/rounded_text_input" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/emailInputLogin"/>
    <Button
            android:text="Zaloguj się"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/loginButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordInputLogin"
            app:layout_constraintStart_toStartOf="@+id/passwordInputLogin"
            app:layout_constraintEnd_toEndOf="@+id/passwordInputLogin"/>
    <TextView
            android:text="Wróć do rejestracji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:id="@+id/backToRegistrationTextView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"
            app:layout_constraintStart_toStartOf="@+id/loginButton"
            app:layout_constraintEnd_toEndOf="@+id/loginButton"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="16dp"
            android:id="@+id/emailInputLogin" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp" android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Email"
            android:background="@drawable/rounded_text_input"/>
</android.support.constraint.ConstraintLayout>